#Splunk linux setup

 tar xvf splunk_installer.tgz

mv splunk /opt/
cd /opt/splunk/bin
./splunk start --aceept-lisence 

  cd /opt/splunk
  ./bin/splunk start
./bin/splunk stop
./bin/splunk restart
./bin/splunk status
./bin/splunk add oneshot
./bin/splunk search 
./bin/splunk help



#splunk forwarder

